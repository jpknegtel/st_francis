<%= link_to("<<back to list", {:action =>'list'}, :class => 'back-link') %>


<div class="player new">
  <h2>New Player</h2>

  <%=form_for(:player, :url => {:action =>'create'}) do |f| %>
  <table>
    <tr>
      <th>First name</th>
      <td><%=f.text_field(:first_name) %></td>
    </tr>
    <tr>
      <th>Last name</th>
      <td><%=f.text_field(:last_name) %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%=f.text_field(:email) %></td>
    </tr>
    <tr>
      <th>Team</th>
      <td><%#=select(:player,:team, Team.all.collect {|f| [f.name]})%></td>
          <%= collection_select :player, :team_id, Team.find(:all, :order => 'name ASC'), :id, :name, { :selected => @player.teams_id }, { :multiple => true, :name => 'player[team_id][]' } -%>
    </tr>


  </table>


  <div>
    <%= submit_tag("create player") %>
  </div>
  <% end %>
</div>