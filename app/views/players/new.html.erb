<%= link_to("<<back to list", {:action =>'list'}, :class => 'back-link') %>


<div class="player new">
  <h2>New Player</h2>

  <%=form_for(:player, :url => {:action =>'create'}) do |f| %>
  <table>
    <tr>
      <th>First name</th>
      <td><%=f.text_field(:first_name) %></td>
    </tr>
    <tr>
      <th>Last name</th>
      <td><%=f.text_field(:last_name) %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%=f.text_field(:email) %></td>
    </tr>
    <tr>
      <th>Team</th>
      <td><%= f.select(:team_id, (Team.all.map! &:name)) %></td>

    </tr>


  </table>


  <div>
    <%= submit_tag("create player") %>
  </div>
  <% end %>

 <%= semantic_form_for(:player,:url=>{:action =>'create'}) do |f| %>
    <%= f.inputs do %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :team_id, :as=> :select, :collection => @teams  %>

      <%= f.input :email %>
     <%= f.buttons %>

    <% end %>
  <% end %>

</div>