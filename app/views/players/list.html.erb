<%if !flash[:notice].blank?%>
    <div class ="notice">
        <%= flash[:notice] %>
    </div>
<% end %>

<div class =" player list">
  <h2>Players</h2>
 <%= link_to("Add new player", {:action =>'new'}, :class => 'action new') %>
  <table class="list" align="">
    <tr class="header">
       <th>ID</th>
       <th>Player</th>
       <th>Email</th>
       <th>Actions</th>
    </tr>
    <% @players.each do |player| %>
    <tr>
      <td><%=player.id %></td>
      <td><%=player.first_name + " " + player.last_name %></td>
      <td><%=player.email %></td>
      <td>  <%= link_to("Show", {:action =>'show', :id => player.id}, :class=>'action show') %>
            <%= link_to("Edit",{:action =>'edit', :id => player.id}, :class=>'action edit') %>
            <%= link_to("Delete",{:action =>'delete', :id => player.id}, :class=>'action delete') %>
      </td>

    </tr>
    <% end %>
  </table>
</div>