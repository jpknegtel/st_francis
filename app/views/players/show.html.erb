
<div>
  <%= link_to("<<back to list", {:action =>'list'}, :class => 'back-link') %>
  <h2> Show player</h2>

  <table>
    <tr>
      <th>First name</th>
      <td><%= @player.first_name %></td>
    </tr>
    <tr>
      <th>Last name</th>
      <td><%= @player.last_name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @player.email %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @player.created_at %></td>
    </tr>
    <tr>
      <th>Teams played for</th>
      <td>
        <% @player.teams.each do |team| %>
            <%=team.name %>
        <%end%>
      </td>
    </tr>

  </table>

</div>
