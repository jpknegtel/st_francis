<!DOCTYPE html>
<html>
<head>
  <title>StFrancis</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id=wrapper>
  <%if !flash[:notice].blank?%>
      <div id ="notice">
          <%= flash[:notice] %>
      </div>
  <% end %>
    <div id=header>
        <div id=title>
            <h1>H.T.S.M</h1>
        </div><!--end title-->

        <div id=nav>
            <%= link_to("Teams", {:controller => 'teams',:action =>'list'}, :class => 'view_teams') %>
            <%= link_to("Players", {:controller => 'players',:action =>'list'}, :class => 'view_players') %>
            <%= link_to("Fixtures", {:controller => 'fixtures',:action =>'list'}, :class => 'view_fixtures') %>
        </div><!--end nav-->
    </div><!--end header-->
     <%= yield %>
</div><!--end wrapper-->

</body>
</html>
